<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.GUI_AssignedProjectController"
            prefHeight="650.0" prefWidth="900.0"
            style="-fx-background-color: #f4f6fb;">
    <VBox alignment="CENTER" spacing="22"
          layoutX="0" layoutY="0"
          prefWidth="700"
          maxWidth="740"
          AnchorPane.leftAnchor="80"
          AnchorPane.rightAnchor="80"
          AnchorPane.topAnchor="60"
          AnchorPane.bottomAnchor="60"
          style="-fx-background-color: #fff; -fx-padding: 40 50 40 50; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, #b0b0b0, 12, 0.2, 0, 6);">
        <Label text="Proyecto Asignado"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2A3E8C; -fx-padding: 0 0 14 0;" />
        <Separator />
        <HBox spacing="14" alignment="CENTER_LEFT" maxWidth="660">
            <Label text="Nombre:" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
            <Label fx:id="nameLabel" text="-" style="-fx-text-fill: #333;"/>
        </HBox>
        <HBox spacing="14" alignment="CENTER_LEFT" maxWidth="660">
            <Label text="Descripción:" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
            <Label fx:id="descriptionLabel" text="-" wrapText="true" style="-fx-text-fill: #333;" maxWidth="500"/>
        </HBox>
        <HBox spacing="14" alignment="CENTER_LEFT" maxWidth="660">
            <Label text="Fecha Aproximada:" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
            <Label fx:id="approximateDateLabel" text="-" style="-fx-text-fill: #333;"/>
        </HBox>
        <HBox spacing="14" alignment="CENTER_LEFT" maxWidth="660">
            <Label text="Fecha de Inicio:" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
            <Label fx:id="startDateLabel" text="-" style="-fx-text-fill: #333;"/>
        </HBox>
        <HBox spacing="14" alignment="CENTER_LEFT" maxWidth="660">
            <Label text="ID Usuario:" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
            <Label fx:id="userLabel" text="-" style="-fx-text-fill: #333;"/>
        </HBox>
        <HBox spacing="14" alignment="CENTER_LEFT" maxWidth="660">
            <Label text="Organizacion:" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
            <Label fx:id="organizationLabel" text="-" style="-fx-text-fill: #333;"/>
        </HBox>
        <HBox spacing="14" alignment="CENTER_LEFT" maxWidth="660">
            <Label text="Representante:" style="-fx-font-weight: bold; -fx-text-fill: #1E90FF;"/>
            <Label fx:id="representativeLabel" text="-" style="-fx-text-fill: #333;"/>
        </HBox>
    </VBox>
    <Button fx:id="checkPresentationGradeButton"
            text="Ver Calificación de Presentación"
            style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand;"
            onAction="#handleCheckPresentationGrade"/>
</AnchorPane>