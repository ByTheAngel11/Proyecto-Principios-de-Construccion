<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="725.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.GUI_MenuStudentController">
    <left>
        <VBox spacing="15.0" alignment="TOP_CENTER" style="-fx-background-color: #2A3E8C; -fx-padding: 20;">
            <ImageView fx:id="profileImageView" fitHeight="80.0" fitWidth="80.0" />
            <Label fx:id="welcomeLabel" style="-fx-font-size: 18px; -fx-text-fill: white;" text="Hola, Estudiante" />
            <Button text="Modificar Perfil" onAction="#handleUpdateProfile"
                    style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand;" />
            <Button text="Consultar Avance" onAction="#handleViewProgress"
                    style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand;" />
            <Button text="Ver Proyecto Asignado" onAction="#handleViewAssignedProject"
                    style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand;" />
            <Button fx:id="btnRegisterProjectRequest" layoutX="200.0" layoutY="300.0"
                    text="Registrar Solicitud de Proyecto"
                    onAction="#handleRegisterProjectRequest"/>
        </VBox>
    </left>
    <center>
        <Pane style="-fx-background-color: #F4F4F4;" />
    </center>
</BorderPane>