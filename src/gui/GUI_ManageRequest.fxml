<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.GUI_ManageRequestController"
            prefWidth="400" prefHeight="350">

    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Detalles de la Solicitud" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <GridPane hgap="10" vgap="10">
            <Label text="Matrícula:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="labelTuition" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Nombre del Proyecto:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="labelProjectName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Descripción:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="labelDescription" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Organización:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="labelOrganization" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Label text="Representante:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="labelRepresentative" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
        <HBox spacing="20" alignment="CENTER">
            <Button text="Aprobar" fx:id="buttonApprove" prefWidth="100"/>
            <Button text="Rechazar" fx:id="buttonReject" prefWidth="100"/>
        </HBox>
        <Label fx:id="statusLabel" textFill="red"/>
    </VBox>
</AnchorPane>